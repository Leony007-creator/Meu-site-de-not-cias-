    .cta-button {
      display: inline-block;
      background: #ff6f61;
      color: #fff;
      padding: 10px 20px;
      text-decoration: none;
      border-radius: 5px;
      font-weight: bold;
      margin-top: 20px;
      transition: background 0.3s ease;
    }

    .cta-button:hover {
      background: #ff9a8b;
    }
  </style>
</head>
